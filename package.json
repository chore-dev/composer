{
  "name": "@chore/composer",
  "version": "0.0.1",
  "description": "Single command project setup! This package automates essential tools for code style, version control, releases, and Docker.",
  "keywords": [],
  "type": "module",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "bin": "",
  "scripts": {
    "build": "rollup ./src/index.ts --config rollup.config.js && yarn extract-templates",
    "extract-templates": "find src -type d -name \"templates\" -exec sh -c 'cp -r \"{}/\" dist/templates/' \\;",
    "serve": "node ./dist/index.js",
    "prepare": "husky",
    "// ESLint": "---------- ---------- ---------- ---------- ----------",
    "eslint": "yarn prettier:fix; eslint . --cache --color --config eslint.config.js",
    "eslint:fix": "yarn eslint --fix --quiet",
    "// Prettier": "---------- ---------- ---------- ---------- ----------",
    "prettier": "yarn prettier:base -c",
    "prettier:base": "prettier './**/*.{js?(x),ts?(x),json}' --cache --config .prettier.config.js --ignore-path .prettierignore",
    "prettier:fix": "yarn prettier:base -w",
    "// Format": "---------- ---------- ---------- ---------- ----------",
    "format": "yarn eslint; yarn prettier",
    "format:fix": "yarn eslint:fix; yarn prettier:fix"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "command-line-args": "^5.2.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.20",
    "luxon": "^3.4.4",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@chore-dev/utility-types": "^1.0.0",
    "@eslint/js": "8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/command-line-args": "^5.2.3",
    "@types/eslint__js": "8",
    "@types/inquirer": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "eslint": "8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "rollup": "^4.17.1",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  },
  "author": "Chore Team",
  "contributors": [
    {
      "name": "Issac Li",
      "email": "issac.li.523@gmail.com"
    }
  ],
  "homepage": "https://github.com/chore-dev/composer",
  "repository": {
    "type": "git",
    "url": "https://github.com/chore-dev/composer"
  },
  "bugs": {
    "url": "https://github.com/chore-dev/composer/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0"
}
